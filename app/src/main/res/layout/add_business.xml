<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rounded"
    android:paddingTop="1dp">

    <ImageView
        android:id="@+id/menuButton"
        android:layout_width="29dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_bar_background"
        android:hint="  사업명을(를) 입력하세요"
        android:padding="8dp"
        android:textColorHint="#A0A0A0"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuButton" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/box_background"
        app:layout_constraintBottom_toTopOf="@id/addBusiness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBar">

        <!-- 텍스트 박스 1 -->
        <TextView
            android:id="@+id/textBox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/text_box_background"
            android:padding="12dp"
            android:text="텍스트 박스 1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 텍스트 박스 2 -->
        <TextView
            android:id="@+id/textBox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/text_box_background"
            android:padding="12dp"
            android:text="텍스트 박스 2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textBox1" />

        <!-- 텍스트 박스 3 -->
        <TextView
            android:id="@+id/textBox3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/text_box_background"
            android:padding="12dp"
            android:text="텍스트 박스 3"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textBox2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 사업 추가 버튼 -->
    <Button
        android:id="@+id/addBusiness"
        android:layout_width="168dp"
        android:layout_height="43dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/login_button_background"
        android:paddingTop="8dp"
        android:text="추 가"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/removeBusiness"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintMarginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <!-- 사업 삭제 버튼 -->
    <Button
        android:id="@+id/removeBusiness"
        android:layout_width="168dp"
        android:layout_height="43dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/login_button_background"
        android:paddingTop="8dp"
        android:text="삭 제"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintMarginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/addBusiness"
        app:layout_constraintWidth_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>